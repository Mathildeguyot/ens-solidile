<div class="d-flex align-items-center">

  <h1 style="font-weight: 800">Tous les commerces</h1>
  <%= link_to eshop_commerces_path do %>
    <p id="eshop-filter"><i class="fas fa-sliders-h"></i> avec e-shop</p>
  <% end %>

</div>



<div class="centering">

  <div class="shop-grid">

    <% @commerces.each do |commerce| %>
      <div class="shop-card">
        <p class="name"><%= commerce.name %></p>
        <div class="tags">
          <% commerce.tag.split(",").each do |x| %>
            <p class="tag"><%= x %></p>
          <% end %>
        </div>
        <%= cl_image_tag commerce.photo.key %>
        <p class="description"><%= commerce.description %></p>
        <div class="centering">
          <%= link_to "Voir les dÃ©tails", commerce_path(commerce), class: "site-button" %>
        </div>
      </div>
    <% end %>

  </div>

</div>
