          <% commerce.tag.split(",").each do |x| %>
            <p class="tag"><%= x %></p>
          <% end %>
        </div>
        <%= cl_image_tag commerce.photo.key %>
        <p class="description"><%= commerce.description %></p>
        <div class="centering">
