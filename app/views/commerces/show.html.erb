<div class="shop-infos">
  <div>
    <h1><%= @commerce.name %></h1>
    <p><%= @commerce.address %></p>
  </div>
  <div class="d-flex justify-content-space">
    <div class="owner-infos">
      <h3>PROPRIÉTAIRE</h3>
      <p><%= @commerce.owner.pseudo %></p>
    </div>
    <% if @commerce.owner.photo.attached? %>
      <%= cl_image_tag @commerce.owner.photo.key, class: "avatar" %>
    <% else %>
      <img class="avatar" src="https://oasys.ch/wp-content/uploads/2019/03/photo-avatar-profil.png" alt="">
    <% end %>
  </div>
</div>



<div class="big-shop-card">

  <%= cl_image_tag @commerce.photo.key, id: "shop-pic" %>

  <div class="right-card">

    <div class="d-flex justify-content-between">
      <div class="d-flex">
        <% @commerce.tag.split(",").each do |x| %>
          <p class="tag"><%= x %></p>
        <% end %>
      </div>
    </div>
    <p><%= @commerce.description %></p>

    <div class="top-border">
      <h3>SOUTENIR LA BOUTIQUE</h3>
      <p><%= @commerce.support %></p>
      <br>
      <p>Paiement : <%= @commerce.payment %></p>
    </div>


    <div class="top-border d-flex justify-content-between align-items-center">
      <div>
        <h3>CONTACT</h3>
        <% if @commerce.tel != nil %>
          <p><i class="fas fa-phone-alt"></i>  <%= @commerce.tel %></p>
        <% end %>
        <% if @commerce.mail != nil %>
          <p><i class="fas fa-envelope"></i>  <%= @commerce.mail %></p>
        <% end %>
      </div>
      <div class="">
        <% if @commerce.website != nil %>
          <a class="site-button big" target="_blank" href=<%= @commerce.website %>>Vers le site</a>
        <% end %>
      </div>
    </div>

    <% if @commerce.facebook != nil  %>
      <a target="_blank" href=<%= @commerce.facebook %>><i class="fab fa-facebook" id="facebook-button"></i></a>
    <% end %>

  </div>
</div>


<% unless @commerce.products.size == 0 %>
  <div class="centering">
    <div id="articles-card">
      <h2>Articles phares</h2>
      <div class="products-grid d-flex justify-content-between">
        <% @commerce.products.each do |product| %>
          <div class="product-card">
            <%= cl_image_tag product.photo.key, id: "product-pic" %>
            <div>
              <div class="top-infos">
                <h3><%= product.name %></h3>
                <% if product.price != nil %>
                  <p id="price"><%= product.price.to_s %>€</p>
                <% end %>
              </div>
              <p><%= product.description %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
